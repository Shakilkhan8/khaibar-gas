<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- sale order report -->
    <template id="sh_sale_order_report" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']//div[5]" position="after">
            <div class="col-auto">
                <strong>Contact Person:</strong>
                <p t-field="doc.contact_person_id" />
            </div>
        </xpath>
    </template>
    <!-- purchase order report -->
    <template id="sh_purchase_order_report" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//table[hasclass('table','table-sm')]" position="before"> <strong>Contact Person :</strong><span t-field="o.contact_person_id" /> </xpath>
    </template>
    <template id="sh_purchase_order_custom_report" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@id='informations']//div[1]" position="before">
            <div class="col-3 bm-2">
                <strong>Contact Person :</strong>
                <p t-field="o.contact_person_id" />
            </div>
        </xpath>
    </template>
</odoo>
