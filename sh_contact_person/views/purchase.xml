<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_contact_person_purchase_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="contact_person_id" domain="[('parent_id','=', partner_id )]" />
            </field>
        </field>
    </record>
    <!-- purchase order tree view -->
    <record id="sh_contact_person_purchase_tree" model="ir.ui.view">
        <field name="name">purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="contact_person_id" />
            </field>
        </field>
    </record>
    <!-- purchase order search view -->
    <record id="sh_contact_person_purchase_search" model="ir.ui.view">
        <field name="name">purchase.order.search</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="contact_person_id" string="Contact Person" />
            </xpath>
            <xpath expr="//filter[@name='vendor']" position="after">
                <filter string="Contact Person" name="contact_person" context="{'group_by' : 'contact_person_id'}" />
            </xpath>
        </field>
    </record>
</odoo>
